	//- Вызов:
	//- +form-btn('name','Имя','radio','fruits','orange','Фрукт','Class')

mixin form-btn(id,text_label,type,name,theme,value,cls)
	if cls == ''
		+space
		// Блок с инпутом-btn's
		div(class="form__block form__block_horizontal")
			// label
			label(for=id,class="form__label form__label_"+type+"")= text_label
			// input
			input(id=id,type=type,class="form__input form__input_"+type+" form__input_"+type+"-"+theme+"", name=name, value=value)
		+space
	else	
		+space
		// Блок с инпутом-btn's
		div(class="form__block form__block_horizontal "+cls+"")
			// label
			label(for=id,class="form__label form__label_"+type+"")= text_label
			// input
			input(id=id,type=type,class="form__input form__input_"+type+" form__input_"+type+"-"+theme+"", name=name, value=value)
		+space
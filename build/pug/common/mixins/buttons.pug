//- Кнопка-закрыть

	//- 1: round/square
	//- 2: Тема: blue/orange/aquamarine/default
	//- 3: id
	//- 4: дополнительный класс: например, 'modal__cls'
	//- 5: Иконка: account/notification/close/filter and e.t.c. --> scss/base/_icons.scss 

	//- Вызов:
	//- +btn-c('round', 'default', 'id', 'cls', 'icon')

mixin btn-c(type, theme, id, cls, icon)
	if id == ''
		button(class="btn btn_icon-"+type+" btn_theme-"+theme+" icon-"+icon+" "+cls+"")
	else if cls == ''
		button(class="btn btn_icon-"+type+" btn_theme-"+theme+" icon-"+icon+"" id=id)
	else if cls == '' && id == ''
		button(class="btn btn_icon-"+type+" btn_theme-"+theme+" icon-"+icon+"")
	else
		button(class="btn btn_icon-"+type+" btn_theme-"+theme+" icon-"+icon+" "+cls+"" id=id)

//- Кнопка с формой

	//- 1: Вид: base/big 
	//- 2: Тема: blue/orange/aquamarine/default
	//- 3: Любой текст
	//- 4: id
	//- 5: дополнительный класс: например, 'modal__cls'
	//- 6: url для перехода

	//- Вызов:
	//- +btn('base','blue','button','id', 'cls', 'url')

mixin btn(type, theme, txt, id, cls, link)
	if id == '' 
		button(class="btn btn_"+type+" btn_theme-"+theme+" "+cls+"" onclick="location.href='"+link+"';")
			span #{txt}
	else if link == ''
		button(class="btn btn_"+type+" btn_theme-"+theme+" "+cls+"" id=id)
			span #{txt}
	else if cls == ''
		button(class="btn btn_"+type+" btn_theme-"+theme+"" id={id} onclick="location.href='"+link+"';")
			span #{txt}
	else if cls == '' && id == '' && link == ''
		button(class="btn btn_"+type+" btn_theme-"+theme+"")
			span #{txt}
	else
		button(class="btn btn_"+type+" btn_theme-"+theme+" "+cls+"" id={id} onclick="location.href='"+link+"';")
			span #{txt}



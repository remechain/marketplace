//- Контейнер
	
	//- 1: div/section/article
	//- 2: center/between/horiz-center

	//- Вызов:
	//- +container('div','center')

mixin container(tag,cls)
	if cls == 'center'
		+space
		// Контейнер
		#{tag}(class="container container_"+cls+"")
			block
		+space
	else if cls == 'between'
		+space
		// Контейнер
		#{tag}(class="container container_"+cls+"")
			block
		+space
	else if cls == 'horiz-center'
		+space
		// Контейнер
		#{tag}(class="container container_"+cls+"")
			block
		+space
	else if cls == ''
		+space
		// Контейнер
		#{tag}(class="container")
			block
		+space
	else
		+space
		// Контейнер
		#{tag}(class="container "+cls+"")
			block
		+space
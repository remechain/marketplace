//- Заголовок

	//- 1: 1/2/3
	//- 2: big/medium/small
	//- 3: Любой текст

	//- Вызов:
	//- +title('1','big','Заголовок')

mixin title(num,size,text)
	if num == 1
		h1(class="title title_"+size+"")= text
	else if num == 2
		h2(class="title title_"+size+"")= text
	else if num == 3
		h3(class="title title_"+size+"")= text



//- Текст

	//- 1: big/medium/small
	//- 2: Любой текст

	//- Вызов:
	//- +text('big','Текст')

mixin text(size,text)
	p(class="text text_"+size+"")= text